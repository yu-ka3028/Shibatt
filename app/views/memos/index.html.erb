<h3>メモ一覧</h3>
<% @memos.each do |memo| %>
  <div class="memo">
    <p><%= memo.content %></p>
    <p><%= memo.created_at.strftime('%Y/%m/%d %H:%M') %></p>
    <p>Status: <%= memo.progress ? 'Completed' : 'In progress' %></p>
  </div>
<% end %>
<%= form_with(url: user_memos_path, method: :get) do |f| %>
  <%= f.search_field :content, placeholder: 'Search by content' %>
  <%= f.submit 'Search' %>
<% end %>
<%= paginate @memos, params: { content: params[:content] } %>
