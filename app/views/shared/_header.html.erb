          <li><%= link_to "memo", user_memos_path(current_user), class: "bg-white text-green-800 px-4 py-2 rounded" %></li>
          <li><%= link_to "ref_memo", reflection_memos_path, class: "bg-white text-green-800 px-4 py-2 rounded" %></li>
          <li><%= link_to 'Top', root_path, class: "bg-white text-green-800 px-4 py-2 rounded" %></li>
        <% else %>
          <li>ゲスト</li>
          <li><%= link_to 'Login', login_path %></li>
          <li><%= link_to "Sign_up", sign_up_path %></li>
        <% end %>
