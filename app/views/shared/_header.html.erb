  <div class="twitter">
    <%= link_to "https://twitter.com/share?url=#{root_path}&text=【2Seeds】%0a%0a#{"#RUNTEQ祭 #Shibatt"}", target: '_blank', data: { toggle: "tooltip", placement: "bottom" }, title: "Xでシェア"%>
