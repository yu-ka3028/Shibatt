  <div class="card rounded-box grid h-auto flex-grow place-items-center">
      <% if @user %>
        <dialog id="my_modal_5" class="modal modal-bottom sm:modal-middle">
          <div class="modal-box">
            <h3 class="text-lg font-bold">メモ作成</h3>
            <%= form_with model: @memo, url: user_memos_path(@user), local: true do |f| %>
              <div class="form-group">
                <%= f.text_area :content, class: "form-control", placeholder: "メモ内容", rows: 5 %>
              </div>
              <div class="form-group">
                <%= f.submit "作成", class: "btn" %>
              </div>
            <% end %>
            <div class="modal-action">
              <form method="dialog">
                <!-- if there is a button in form, it will close the modal -->
                <button class="btn">Close</button>
              </form>
            </div>
          </div>
        </dialog>
        <div class="flex space-x-4">
          <%= link_to "【memo】", user_memos_path(current_user), class: "bg-white text-green-800 px-4 py-2 rounded" if current_user %>
          <%= link_to "【ref_memo】", reflection_memos_path, class: "bg-white text-green-800 px-4 py-2 rounded" if current_user %>
        </div>
      <% end %>
